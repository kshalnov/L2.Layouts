    android:columnCount="3"
    tools:context=".MainActivity">

    <Button android:text="1" />

    <Button android:text="2" />

    <Button
        android:layout_column="1"
        android:text="3" />

    <Button android:text="4" />

    <Button android:text="5" />

    <Button
